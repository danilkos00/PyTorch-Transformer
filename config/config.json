{
  "model": {
    "vocab_size": 10000,
    "context_length": 256,
    "d_model": 512,
    "num_layers": 8,
    "num_heads": 8,
    "rope_theta": 10000,
    "use_flash_attention": 1
  },
  "optimizer": {
    "lr": 1e-4,
    "weight_decay": 1e-4,
    "betas": [0.9, 0.95],
    "eps": 1e-8
  },
  "scheduler": {
    "max_lr": 1e-4,
    "min_lr": 1e-6,
    "T_w": 2000,
    "T_c": 10000
  },
  "data": {
    "batch_size": 32,
    "device": "cuda"
  },
  "training": {
    "max_iters": 22000,
    "grad_clip": 1.0,
    "log_interval": 1,
    "eval_interval": 10,
    "save_interval": 1000,
    "checkpoint_path": "checkpoint.tar"
  }
}